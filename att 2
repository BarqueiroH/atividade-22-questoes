function encontrarMaior() {
    
    const a = parseFloat(prompt("Digite o primeiro valor (a):"));
    const b = parseFloat(prompt("Digite o segundo valor (b):"));
    const c = parseFloat(prompt("Digite o terceiro valor (c):"));
   
    console.log("Valores digitados: a =", a, ", b =", b, ", c =", c);
 
    const maiorAB = (a + b + Math.abs(a - b)) / 2;
    
    const maior = (maiorAB + c + Math.abs(maiorAB - c)) / 2;
 
    console.log(maior + " Ã© o maior.");
}
encontrarMaior();
